{
    "compilerOptions": {
      "lib": ["es5", "es6"],
      "target": "es5",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "downlevelIteration": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
    },
    "include": ["./src/**/**.ts", "./src/**.json"],
    "exclude": ["node_modules", "./dist"],
    "baseUrl": "."
}